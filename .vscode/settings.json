{
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, remix.config.js, tsconfig.json, .eslintrc.js, .gitignore, .prettierignore, turbo.json, tsconfig.tsbuildinfo"
  },
  "search.useGlobalIgnoreFiles": true,
  "files.exclude": {
    "**/.cache": true,
    "**/.turbo": true,
    "**/build": true,
    "**/node_modules": true
  }
}
